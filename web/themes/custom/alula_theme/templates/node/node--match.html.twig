

{%
set node__classes = [

    'node' ,
    node.isPromoted() ? 'node-promoted',
    node.isSticky() ? 'node-sticky',
    not node.isPublished() ? 'node-unpublished',
    view_mode ? 'node-view-mode-' ~ view_mode|clean_class,
]
%}


<table>
<match {{ attribute.addClass(node__classes)}}>

{# {{ title_prefix }}
 <h2 {{title_attributes.addClass('node-title')}}>
  <div>{{"Title: "~node.label}}</div>
 </h2> 
{{ title_suffix }} #}

<tr>
<div>
{{ node.field_next.value }}
</div>
</tr>



{% set image_styled = {
  '#theme': 'image_style',
  '#style_name': 'thumbnail',
  '#uri': node.field_logo_club[0].entity.uri.value,
  '#alt': node.field_logo_club[0].alt,
} %}

{% set image_logo = {
  '#theme': 'image_style',
  '#style_name': 'thumbnail',
  '#uri': node.field_logo_team[0].entity.uri.value,
  '#alt': node.field_logo_team[0].alt,
} %}
<tr>
{{ image_styled }}
{{ image_logo }}
</tr>

<tr>
<div>
{{ node.field_club.value~"      "~node.field_team.value }}
</div>
</tr>


<tr>
<div>
{{ node.field_stadium.entity.label }}
</div>
</tr>


<tr>
<div>
{{""}}
{{ node.field_date.value|date("g:i") }}
{{"م"}}
</div>
</tr>

<tr>
{{ node.field_date.value|date("d/m/Y   السبت") }}
</tr>






</match>
</table>